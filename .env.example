# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Git Configuration
GIT_REPO_PATH=./git_repo
GIT_USER_NAME=Git-Chat-Log Bot
GIT_USER_EMAIL=bot@git-chat-log.local
GITHUB_TOKEN=your_github_token_here

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=backlogs

# Slack Configuration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Configuration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=False
RELOAD=False

# API Security
# Set a strong API key for production (e.g., generated with: openssl rand -hex 32)
API_KEY=your_secure_api_key_here

# CORS Configuration
# Comma-separated list of allowed origins (leave empty to allow all)
# Example: CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=

# Environment
# Options: production, development, testing
ENVIRONMENT=production

# Scheduler Configuration
SCHEDULER_ENABLED=True
SCHEDULER_CHECK_INTERVAL_HOURS=24
OVERDUE_TASK_CHECK_HOUR=9
STALE_TASK_DAYS=7
